<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D39136"
    tools:context=".home">

    <RelativeLayout
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="498px"
        android:background="@drawable/bgprofile">

        <ImageView
            android:id="@+id/picuser"
            android:layout_width="110dp"
            android:layout_height="105dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="43dp"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="39dp"
            android:layout_marginBottom="47dp"
            android:src="@drawable/picprofile" />

        <TextView
            android:id="@+id/fullname"
            android:layout_width="231dp"
            android:layout_height="26dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp"
            android:layout_toEndOf="@+id/picuser"
            android:layout_toRightOf="@+id/picuser"
            android:text="ชื่อ - นามสกุล"
            android:textColor="#fff"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/classstudent"
            android:layout_width="231dp"
            android:layout_height="24dp"
            android:layout_below="@+id/fullname"
            android:layout_alignStart="@+id/fullname"
            android:layout_alignLeft="@+id/fullname"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp"
            android:text="มัธยมศึกษาปีที่ 6/1"
            android:textColor="#fff"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/myteacher"
            android:layout_width="231dp"
            android:layout_height="20dp"
            android:layout_below="@+id/classstudent"
            android:layout_alignStart="@+id/classstudent"
            android:layout_alignLeft="@+id/classstudent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp"
            android:text="ครูประจำชั้น"
            android:textColor="#fff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tel_teacherClass"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myteacher"
            android:layout_alignStart="@+id/myteacher"
            android:layout_alignLeft="@+id/myteacher"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginBottom="45dp"
            android:text="เบอร์โทรศัพท์"
            android:textColor="#fff"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="502dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="200dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bgnews">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="329dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp" />
    </RelativeLayout>

</FrameLayout>