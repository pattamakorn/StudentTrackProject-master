<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".transcript"
    android:background="#fff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="279px"
        android:background="@drawable/tabgrade">

        <TextView
            android:id="@+id/textgradeall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="272dp"
            android:layout_marginRight="272dp"
            android:text="เกรดเฉลี่ยรวม"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/allgrade"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textgradeall"
            android:layout_alignStart="@+id/textgradeall"
            android:layout_alignLeft="@+id/textgradeall"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="251dp"
            android:layout_marginRight="251dp"
            android:text="3.99"
            android:textColor="#2A8835"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textcredit"
            android:layout_width="81dp"
            android:layout_height="17dp"
            android:layout_below="@+id/allgrade"
            android:layout_alignStart="@+id/textgradeall"
            android:layout_alignLeft="@+id/textgradeall"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="277dp"
            android:layout_marginRight="277dp"
            android:layout_marginBottom="4dp"
            android:text="หน่วยกิตรวม"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/allcredit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="252dp"
            android:layout_marginRight="252dp"
            android:layout_marginBottom="2dp"
            android:text="30"
            android:textColor="#2A8835"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="279px"
        android:layout_width="wrap_content"
        android:layout_height="163px"
        android:background="@drawable/grade">

        <Button
            android:id="@+id/detail"
            android:layout_width="52dp"
            android:layout_height="29dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="17dp"
            android:background="@drawable/detail" />
    </RelativeLayout>

</FrameLayout>